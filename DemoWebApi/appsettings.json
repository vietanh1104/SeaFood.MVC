{
  "Serilog": {
    "Using": [ "Serilog.Enrichers.ClientInfo" ],
    "MinimumLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId", "WithClientIp", "WithClientAgent" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log_.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{ClientIp} {ClientAgent}] [{Level:u3}] {Message}{NewLine:1}{Exception:1}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DbConnection": "Data Source=V002952\\MSSQLSERVER03;Initial Catalog=Seafood;Integrated Security=True;",
    "DbType": "SqlServer"
  },
  "SecretKey": "demo-123123",
  "Authentication": {
    "CookieName": "seafood",
    "DefaultRedirect": "/seafood",
    "AccessDeniedPath": "/account/accessDenied",
    "LoginRedirect": "/account/login",
    "LogoutPath": "/account/logout",
    "SlidingExpiration": true,
    "CookieTimeoutMinutes": 43200
  }
}
